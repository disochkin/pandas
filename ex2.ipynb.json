   "source": [
    "import pandas as pd\n",
    "file_dir = \"names\"\n",
    "def count_dynamics(years):\n",
    "    ac = []\n",
    "    for year in years:\n",
    "        gl = pd.read_csv(f\"{file_dir}/yob{year}.txt\",header =None)\n",
    "        gl.columns = ['Name', 'Gender', 'Data']\n",
    "        gl['Year'] = year\n",
    "        ac.append(gl)\n",
    "    total = pd.concat(ac)\n",
    "    res = total.groupby([\"Year\",\"Gender\"]).Data.sum()\n",
    "    return res"
   ]
